# uvspec data files
data_files_path /libRadtran-2.0.2/data/
#atmosphere file
atmosphere_file /libRadtran-2.0.2/data/atmmod/afglus.dat
# output wavelength gird
source thermal /libRadtran-2.0.2/examples/UVSPEC_LOWTRAN_THERMAL.TRANS

rte_solver twostr    # Radiative transfer equation solver
#rte_solver tzs    # Radiative transfer equation solver
# pseudospherical
#wavelength_grid_file ../examples/UVSPEC_LOWTRAN_THERMAL.TRANS

# mol_abs_param LOWTRAN  # select LOWTRAN molecular absorption 
mol_abs_param reptran fine   #reptran high resolution 
# vertical level in km
zout 2
# wavelength range in nm
wavelength 4000 50000

output_process per_nm  #flux units in W/(m2 nm)
output_user wavelength edn eup   #wavelength (nm), downward flux, upward flux

#quiet
